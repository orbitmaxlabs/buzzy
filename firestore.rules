rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users can read and write their own profile
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      allow read: if request.auth != null; // Allow reading other users for search
    }
    
    // Friend requests
    match /friendRequests/{requestId} {
      allow read, write: if request.auth != null && 
        (resource.data.fromUid == request.auth.uid || resource.data.toUid == request.auth.uid);
      allow create: if request.auth != null && 
        request.resource.data.fromUid == request.auth.uid;
    }
    
    // Friends relationships
    match /friends/{friendId} {
      allow read, write: if request.auth != null && 
        (resource.data.userUid == request.auth.uid || resource.data.friendUid == request.auth.uid);
      allow create: if request.auth != null && 
        (request.resource.data.userUid == request.auth.uid || request.resource.data.friendUid == request.auth.uid);
    }
    
    // Messages - users can read/write messages they're involved in
    match /messages/{messageId} {
      allow read, write: if request.auth != null && 
        (resource.data.fromUid == request.auth.uid || resource.data.toUid == request.auth.uid);
      allow create: if request.auth != null && 
        request.resource.data.fromUid == request.auth.uid;
    }
    
    // Notifications - users can read their own notifications, Firebase Functions can write
    match /notifications/{notificationId} {
      allow read: if request.auth != null && 
        resource.data.targetUid == request.auth.uid;
      allow create: if request.auth != null && 
        request.resource.data.targetUid == request.auth.uid;
      // Allow Firebase Functions to write notifications (they use admin SDK)
      allow write: if true; // This allows the Firebase Function to write notifications
    }
    
    // Notification tokens - users can read/write their own tokens, but anyone can read tokens (for sending notifications)
    match /notificationTokens/{userId} {
      allow read: if request.auth != null; // Anyone authenticated can read tokens (needed for sending notifications)
      allow write: if request.auth != null && request.auth.uid == userId; // Only owner can write their own token
    }
  }
} 